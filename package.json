{
  "name": "rollun-ts-rql",
  "main": "dist/index.js",
  "type": "module",
  "version": "0.10.0",
  "description": "RQL query object and serializer written in TypeScript",
  "scripts": {
    "build": "vite build",
    "preview": "vite preview",
    "build:types": "tsc --declaration",
    "build:all": "npm run build && npm run build:types && node copyPackageAndReadme.cjs",
    "analyse": "eslint 'src/**/*.{js,ts,tsx}'",
    "fix-style": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "test": "jest --config jest.config.cjs",
    "test:ci": "jest --config jest.config.cjs --coverage --coverageReporters=\"json-summary\"  --watchAll=false",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "update:badge": "node ./updateBadge.cjs"
  },
  "jest": {
    "coverageReporters": [
      "html",
      "json-summary",
      "json",
      "lcov"
    ],
    "collectCoverageFrom": [
      "**/*.{js,jsx,ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rollun-com/rollun-ts-rql.git"
  },
  "keywords": [
    "rql",
    "typescript",
    "rollun"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rollun-com/rollun-ts-rql/issues"
  },
  "homepage": "https://github.com/rollun-com/rollun-ts-rql#readme",
  "devDependencies": {
    "@eslint/js": "^8.57.1",
    "@types/jest": "^29.5.13",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/eslint-plugin-tslint": "^7.0.2",
    "@typescript-eslint/parser": "^8.8.1",
    "eslint": "^8.57.1",
    "eslint-plugin-jsdoc": "^50.3.2",
    "globals": "^15.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.4.0",
    "typescript": "^4.4.4",
    "typescript-eslint": "^8.8.1",
    "vite": "^5.4.8",
    "vite-tsconfig-paths": "^5.0.1"
  },
  "files": [
    "dist/*"
  ],
  "module": "rollun-ts-rql.es.js"
}
